            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            id: setting1
            size_hint: (.5, .12)
            text_size: root.width, None
            font_size: '25sp'
            multiline: False
            hint_text: 'Default'
            pos: (300, 425)
        ImageButton:
            id: save_settings
            source: '../img/save_settings.png'
            halign: 'center'
            valign: 'middle'
            size_hint: (.3, .3)
            pos: (500, 25)
            on_release: self.parent.save_settings(setting1.text); setting1.text = ''
    FileTransferScreen:
        app: self.manager.app
        manager: screen_manager
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
    ConnectionStringGenerationScreen:
        app: self.manager.app
        manager: screen_manager
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            id: servername
            size_hint: (.35, .1)
            font_size: '24sp'
            multiline: False
            hint_text: 'Default Value'
            pos: (330, 430)
        TextInput:
            id: callnumber
            size_hint: (.35, .1)
            font_size: '24sp'
            multiline: False
            password: False
            hint_text: 'Default Value'
            pos: (330, 220)
        TextInput:
            id: username
            size_hint: (.35, .1)
            font_size: '24sp'
            multiline: False
            hint_text: 'Default Value'
            pos: (330, 360)
        TextInput:
            id: password
            size_hint: (.35, .1)
            font_size: '24sp'
            multiline: False
            password: True
            hint_text: 'Default Value'
            pos: (330, 290)
        ImageButton:
            source: '../img/generate_strings.png'
            size_hint: (.2, .2)
            pos: (450, 50)
            on_release: self.parent.generate_string(servername.text, username.text, password.text, callnumber.text)

<MainScreen>:
