#:kivy 1.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManager:
    app: None
    id: screen_manager
    transition: FadeTransition()
    MainScreen:
        manager: screen_manager
        app: self.manager.app
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
    ProducerJoiningScreen:
        manager: screen_manager
        app: self.manager.app
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            id: servername
            size_hint: (.35, .1)
            font_size: '24sp'
            multiline: False
            hint_text: 'Default Value'
            pos: (330, 460)
        TextInput:
            id: callnumber
            size_hint: (.35, .1)
            font_size: '24sp'
            multiline: False
            password: False
            hint_text: 'Default Value'
            pos: (330, 250)
        TextInput:
            id: username
            size_hint: (.35, .1)
            font_size: '24sp'
            multiline: False
            hint_text: 'Default Value'
            pos: (330, 390)
        TextInput:
            id: password
            size_hint: (.35, .1)
            font_size: '24sp'
            multiline: False
            password: True
            hint_text: 'Default Value'
            pos: (330, 320)
        TextInput:
            id: producer_connection
            size_hint: (.35, .2)
            font_size: '24sp'
            multiline: True
            password: True
            hint_text: 'OR\nEnter your connection string'
            pos: (330, 110)
        ImageButton:
            id: producerjoinsess
            source: '../img/arrow_right.png'
            halign: 'center'
            valign: 'middle'
            size_hint: (.15, .15)
            text_size: root.width, None
            font_size: '25sp'
            pos: (620, 250)
            on_release: self.parent.get_text(servername.text, username.text, password.text, callnumber.text)
        ImageButton:
            id: producerjoinsess
            source: '../img/arrow_right.png'
            halign: 'center'
            valign: 'middle'
            size_hint: (.15, .15)
            text_size: root.width, None
            font_size: '25sp'
            pos: (620, 110)
            on_release: self.parent.get_conn(producer_connection.text)
        ImageButton:
            id: main_menu
            source: '../img/arrow_left.png'
            text: 'Main Menu'
            halign: 'center'
            valign: 'middle'
            size_hint: (.20, .10)
            text_size: root.width, None
            font_size: '25sp'
            pos: (-25, 510)
            on_release: app.root.current = 'main'
    ArtistJoiningScreen:
        manager: screen_manager
        app: self.manager.app
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            id: artconnection
            size_hint: (.8, .15)
            text_size: root.width, None
            font_size: '25sp'
            multiline: True
            hint_text: 'Use Saved Values'
            pos: (80, 280)
        ImageButton:
            id: artjoinsess
            text: 'Join Session'
            source: '../img/arrow_right.png'
            halign: 'center'
            valign: 'middle'
            size_hint: (.5, None)
            text_size: root.width, None
            font_size: '25sp'
            pos: (200, 100)
            on_release: self.parent.get_text(artconnection.text)
        ImageButton:
            id: main_menu
            source: '../img/arrow_left.png'
            text: 'Main Menu'
            halign: 'center'
            valign: 'middle'
            size_hint: (.20, .10)
            text_size: root.width, None
            font_size: '25sp'
            pos: (0, 510)
            on_release: app.root.current = 'main'
    ProducerSessionScreen:
        manager: screen_manager
        app: self.manager.app
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            id: producer_chatText
            size_hint: (.55, .10)
            text_size: root.width, None
            font_size: '18sp'
            hint_text: 'Type to chat'
            multiline: False
            on_text_validate: self.parent.send_message(producer_chatText.text); producer_chatText.text = ''
            pos: (20, 300)
    ArtistSessionScreen:
        manager: screen_manager
        app: self.manager.app
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
