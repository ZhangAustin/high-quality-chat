#:kivy 1.0
#:import FadeTransition kivy.uix.screenmanager.FadeTransition
ScreenManager:
    app: None
    id: screen_manager
    transition: FadeTransition()
    MainScreen:
        manager: screen_manager
        app: self.manager.app
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
    ProducerJoiningScreen:
        manager: screen_manager
        app: self.manager.app
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            id: servername
            size_hint: (.5, .1)
            font_size: '24sp'
            multiline: False
            hint_text: 'servername'
            pos: (330, 410)
        TextInput:
            id: callnumber
            size_hint: (.5, .1)
            font_size: '24sp'
            multiline: False
            password: True
            hint_text: 'e.g. 1004'
            pos: (330, 340)
        TextInput:
            id: username
            size_hint: (.5, .1)
            font_size: '24sp'
            multiline: False
            hint_text: 'your_username'
            pos: (330, 270)
        TextInput:
            id: password
            size_hint: (.5, .1)
            font_size: '24sp'
            multiline: False
            password: True
            hint_text: '********'
            pos: (330, 200)
        ImageButton:
            id: producerjoinsess
            source: '../img/arrow_right.png'
            halign: 'center'
            valign: 'middle'
            size_hint: (.5, None)
            text_size: root.width, None
            font_size: '25sp'
            pos: (200, 60)
            on_release: self.parent.get_text(servername.text, username.text, password.text, callnumber.text)
        ImageButton:
            id: main_menu
            source: '../img/arrow_left.png'
            text: 'Main Menu'
            halign: 'center'
            valign: 'middle'
            size_hint: (.20, .10)
            text_size: root.width, None
            font_size: '25sp'
            pos: (-25, 510)
            on_release: app.root.current = 'main'
    ArtistJoiningScreen:
        manager: screen_manager
        app: self.manager.app
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            id: artconnection
            size_hint: (.8, .15)
            text_size: root.width, None
            font_size: '25sp'
            multiline: True
            hint_text: 'e.g. MTAwNDszYjIwODAyYzk1YmM0NjE3MTVlM2NmZ\nGQ4YzY2NGYyOzQ1LjE3LjE2MC43NA=='
            pos: (80, 280)
        ImageButton:
            id: artjoinsess
            text: 'Join Session'
            source: '../img/arrow_right.png'
            halign: 'center'
            valign: 'middle'
            size_hint: (.5, None)
            text_size: root.width, None
            font_size: '25sp'
            pos: (200, 100)
            on_release: self.parent.get_text(artconnection.text)
        ImageButton:
            id: main_menu
            source: '../img/arrow_left.png'
            text: 'Main Menu'
            halign: 'center'
            valign: 'middle'
            size_hint: (.20, .10)
            text_size: root.width, None
            font_size: '25sp'
            pos: (0, 510)
            on_release: app.root.current = 'main'
    SessionScreen:
        manager: screen_manager
        app: self.manager.app
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            id: chatText
            size_hint: (.50, .10)
            text_size: root.width, None
            font_size: '18sp'
            hint_text: 'Type to chat'
            multiline: False
            on_text_validate: self.parent.send_message(chatText.text)

            pos: (10, 300)
    SettingsScreen:
        manager: screen_manager
        app: self.manager.app
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size
        TextInput:
            id: setting1
            size_hint: (.5, .10)
            text_size: root.width, None
            font_size: '25sp'
            multiline: False
            hint_text: 'YES'
            pos: (250, 430)
        TextInput:
            id: setting2
            size_hint: (.5, .10)
            text_size: root.width, None
            font_size: '25sp'
            multiline: False
            hint_text: 'YES'
            pos: (250, 365)
        TextInput:
            id: setting3
            size_hint: (.5, .10)
            text_size: root.width, None
            font_size: '25sp'
            multiline: False
            hint_text: 'ON'
            password: True
            pos: (250, 300)
    FileTransferScreen:
        app: self.manager.app
        manager: screen_manager
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 0.95
            Rectangle:
                pos: self.pos
                size: self.size

<MainScreen>:
    name: "main"
    Image:
        source: '../img/hqc_logo_words.png'
        size_hint: (1, 1)
        pos: (85, 5)
    BoxLayout:
        pos: (350, 520)
        spacing: '50'
        ImageButton:
            source: '../img/settings_dark.png'
            size_hint: .1, .1
            on_release: app.root.current = 'settings'
    ImageButton:
        id: producer
        source: '../img/producer.png'
        on_release: app.root.current = "producersessionjoining"
        size_hint: (.23, .23)
        pos: (50, 400)
    ImageButton:
        id: artist
        source: '../img/artist.png'
        on_release: app.root.current = "artistsessionjoining"
        size_hint: (.23, .23)
        pos: (50, 235)
    ImageButton:
        id: listener
        source: '../img/listener.png'
        on_release: app.root.current = "artistsessionjoining"
        size_hint: (.23, .23)
        pos: (50, 70)
<ProducerJoiningScreen>
    name: "producersessionjoining"
    Image:
        source: '../img/server_address.png'
        size_hint: (0.28, 0.28)
        pos: (70, 360)
    Image:
        source: '../img/username.png'
        size_hint: (0.195, 0.195)
        pos: (145, 310)
    Image:
        source: '../img/password.png'
        size_hint: (0.16, 0.16)
        pos: (160, 255)
    Image:
        source: '../img/call_number.png'
        size_hint: (0.2, 0.2)
        pos: (130, 170)
<ArtistJoiningScreen>
    name: "artistsessionjoining"
    Image:
        source: '../img/connection_string.png'
        size_hint: (0.40, 0.40)
        pos: (60, 295)
<SessionScreen>:
    name: "session"
    ActionBar:
        ActionView:
            ActionPrevious:
                title: 'HQC: Session Name'
                with_previous: False
                app_icon: '../img/orion_just_stars.png'
            ActionOverflow:
            ActionImageButton:
                id: mute_button
                source: root.muted_mic_image
                group: 'volume'
                on_press: root.toggle_mute()

            ActionButton:
                background_normal: 'atlas://data/images/defaulttheme/audio-volume-high'
            ActionGroup:
                ActionImageButton:
                    source: '../img/sign_out_option.png'
                    text: 'Leave Session'
                    on_release: app.root.current = 'filetransfer'
    ProgressBar:
        id: progress_bar
        size_hint: (0.6, 0.25)
        pos: (0, 5)
        value: 0
        max: 30
    ImageButton:
        id: record_button
        source: '../img/record_theme2.png'
        font_size: '25sp'
        size_hint: (.25, .25)
        pos: (135, 115)
        on_press: root.record_button()
    TabbedPanel:
        size_hint: (.4, .9)
        pos_hint: {'center_x': .8, 'center_y': .55}
        do_default_tab: False
        TabbedPanelItem:
            tab_width: 300
            text: 'Select Clips'
            ScrollView:
                size_hint: (None, None)
                size: (310, 460)
                pos_hint: {'center_x': .5, 'center_y': .5}
                do_scroll_x: False
                GridLayout:
                    id: audioSidebar
                    cols: 3
                    padding: 10
                    spacing: 5
                    size_hint: (None, None)
                    width: 310
        TabbedPanelItem:
            text: 'Edit Tools'
            tab_width: 400
            GridLayout:
                cols: 1
                Button:
                    id: menuCrop
                    text: 'Crop Out'
                    font_size: '18sp'
                Button:
                    id: menuSave
                    text: 'Save'
                    font_size: '18sp'
                Button:
                    id: undo
                    text: 'Undo'
                    font_size: '18sp'
                Button:
                    id: redo
                    text: 'Redo'
                    font_size: '18sp'
    BoxLayout:
        ScrollView:
            size_hint: (None, None)
            size: (400, 200)
            pos_hint: {'center_x':.3, 'center_y':.78}
            scroll_y: 0
            Label:
                text: root.chat_messages
                markup: True
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'left'
                valign: 'top'
<SettingsScreen>
    name: "settings"
    ImageButton:
        id: main_menu
        source: '../img/arrow_left.png'
        text: 'Main Menu'
        halign: 'center'
        valign: 'middle'
        size_hint: (.20, .10)
        text_size: root.width, None
        font_size: '25sp'
        pos: (670, 520)
        on_release: app.root.current = 'main'
    Image:
        source: '../img/username.png'
        size_hint: (0.20, 0.20)
        pos: (68, 400)
    Image:
        source: '../img/microphone_text.png'
        size_hint: (0.20, 0.20)
        pos: (60, 335)
    Image:
        source: '../img/speakers.png'
        size_hint: (0.16, 0.16)
        pos: (90, 280)
    ImageButton:
        id: save_settings
        source: '../img/save_settings.png'
        halign: 'center'
        valign: 'middle'
        size_hint: (.3, .3)
        pos: (270, 50)
        on_release: app.root.current = 'main'
<FileTransferScreen>
    name: "filetransfer"
    BoxLayout:
        id: filelayout
        orientation: 'vertical'
        padding: [0, 0, 0, 150]
    Button:
        id: leave_file
        text: 'Exit Application'
        halign: 'center'
        valign: 'middle'
        size_hint: (.4, .10)
        text_size: root.width, None
        font_size: '25sp'
        pos: (250, 50)
        on_release: root.leave_session()
